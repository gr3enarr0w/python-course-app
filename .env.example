# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=swrpg_manager

# JWT Configuration
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours

# Flask Configuration
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
FLASK_SECRET_KEY=your-super-secret-flask-key-change-this-in-production
FLASK_ENV=development

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Discord OAuth (optional)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Security Settings
BCRYPT_LOG_ROUNDS=12
INVITE_CODES_ENABLED=true

# Admin Settings
ADMIN_INVITE_CODE=admin-master-code-change-this
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(16))"
ADMIN_PASSWORD=your-secure-admin-password-here

# Encryption Keys (generate these and store securely)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_PASSWORD=your-secure-encryption-password-here
ENCRYPTION_SALT=your-secure-encryption-salt-here